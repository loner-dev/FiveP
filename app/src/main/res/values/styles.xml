<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- TODO изменить цвет, этот на оранжевый не похож -->
        <item name="colorPrimary">@color/themeOrange</item>
        <item name="colorPrimaryDark">@color/themeOrangeDark</item>
        <!-- <item name="colorAccent">@color/colorAccent</item> -->
        <item name="titleTextColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textProgram">
        <item name="android:textColor">#0000ff</item>
        <item name="android:background">#651FFF</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
